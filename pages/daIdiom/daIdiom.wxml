<!--pages/daIdiom/daIdiom.wxml-->
<!-- 以下为引导页遮罩 -->
<!-- 帮助与收藏 -->
<view class="box_star" >
  <navigator url="../help/help"><image src='/image/newicon/why.png' class='imageStyle_left'></image></navigator>
  <image src='{{isCollect? "../../image/icon/store2.png": "../../image/icon/store1.png"}}' bindtap='store' id="{{id}}" class='imageStyle'></image>
</view>
<!-- 显示词语部分 -->
<view class="top">
  <image src="/image/newicon/bgred.png" class="orange"></image>
  <my-navi my-property='{{aa}}'></my-navi>
  <view class="header">
  <image src="/image/newicon/ciyubg.png" class="fangkuang"> </image>
  <view class="box_zi" bindtap="explain"> 
  <text class="py">{{idiom.word}}</text> 
  </view>
  <!-- <text class="py">你好呀{{characters.hanzi}}</text> -->
  </view>

</view>
<view class="zhushi">
    <image src="/image/newicon/!.png"></image>
    点击成语框查看释义
  </view>
<!-- 眼睛和拼音 -->
<view class="box_py" bindtap='eyeStatus'>
  <view class="eye">
    <image src='{{defaultType? "/image/icon/close_eye.png": ""}}' class='imageStyle'></image>
  </view>
  <!-- <text class="{{passwordType?'passwordT':''}}">ni hao ya {{characters.pinyin}}</text>  -->
  <view class="pinyin {{passwordType?'passwordT':''}}">
      <view class="pbox">
        <view>{{idiom.pinyin[0]}} {{idiom.pinyin[1]}}</view> 
      </view>
      <view class="pbox">
        <view>{{idiom.pinyin[2]}} {{idiom.pinyin[3]}}</view> 
      </view>
  </view> 
</view>
<!-- 输入框 -->
<view class="box_input">
  <input class="input {{flag?'cuowu':''}}" type="text" name="shuru" value="{{inputvalue}}" bindinput="check" bindfocus="bindf" placeholder="在此输入汉字" confirm-type="send" maxlength="24"/>
</view>
<audio src="{{src}}" id="myAudio"></audio>
<!-- 上一个下一个 -->
<view class="box_sx">
  <button class="sx1"  bindtap="{{!buttonClicked?'shang':''}}" plain='true' id="{{id}}"> 
    <image src='/image/newicon/formerbutton.png' mode='widthFix' class="former"></image>
  </button>
  <button class="sx2"  bindtap="{{!buttonClicked?'xia':''}}" plain='true' id="{{id}}"> 
    <image src='/image/newicon/laterbutton.png' mode='widthFix' class="next"></image>
  </button>
</view>

