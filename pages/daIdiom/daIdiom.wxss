/* 引导页遮罩样式 */
.shadow_box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  background-color: rgba(22, 23, 24, 0.56);
}
.finger{
  display: flex;
  flex-direction: column;
  margin-top: 400rpx;
}

.finger text{
  font: 48rpx 'Microsoft YaHei';
  color: #FFFFFF;
  text-align: center;
}
.finger .fs{
  color: rgb(228, 134, 72);
}
.finger image{
  width: 50rpx;
  height: 50rpx;
}
