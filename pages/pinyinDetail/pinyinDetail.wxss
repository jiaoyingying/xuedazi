/* pages/pinyinDetail/pinyinDetail.wxss */
page {
  background-color: #e4f6d6;
}
/* 以下为引导页样式设置 */
.shadow_box{
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  background-color: rgba(22, 23, 24, 0.56);
}

.finger{
  position: relative;
  top: 600rpx;
  left: 150rpx;
}

.finger text{
  font: 48rpx 'Microsoft YaHei';
  color: #FFFFFF;
}
.finger image{
  width: 50rpx;
  height: 50rpx;
}
/* 知道了按钮样式设置 */
.dianji .know{
  margin-top: 1000rpx;
  width: 270rpx;
  color: #fff;
  background-color: #4e4e4e;
}
.box{
  width:500rpx;
  height:350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 24rpx;
  font-family: Segoe UI;
  font-size:200rpx;
  font-weight: bold;
  color: #707070;
  background-color:#fff;
  margin:auto;
  margin-top:100rpx;
}
.box_zi{
  box-sizing: border-box;
  padding:40rpx;
  width:500rpx;
  height:200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left:125rpx;
  margin-top:30rpx;
  margin-bottom:200rpx;
  color: #707070;

}
.zi{
  font-size:150rpx;
  font-family: Segoe UI;
  font-weight: bold;
}
.icon{
  height:120rpx;
  width:120rpx;
  position: relative;
}
.icon image{
  height:120rpx;
  width:120rpx;
}
.icon .btn{
  position:absolute;
  height:120rpx;
  width:120rpx;
  left:0;
  top:0;
  opacity: 0;
}
.box_sx {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.box_sx .sx1{
  width: 270rpx;
  color: #707070;

}
.box_sx .sx2{
  width: 270rpx;
  color: #707070;
  background-color: #fdff73;
}
