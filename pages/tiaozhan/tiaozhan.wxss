/* pages/tiaozhan/tiaozhan.wxss */
page{
  background-color: #dfcee3;
}
.box_help{
  position: relative;
  width: 100%;
  height: 50rpx;
}

.box_help .imageStyle{
  position: absolute;
  top:30rpx;
  right: 670rpx;
  width:50rpx;
  height:50rpx;
}

.time{
  display: flex;
  width: 500rpx;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  margin: 50rpx auto;
  border-radius: 24rpx;
  background-color: #fff;
}

.sent_input{
  display:flex;
  flex-direction: column;
  width: 500rpx;
  height:700rpx;
  justify-content: center;
  align-items: center;
  margin: auto;
  border-radius: 24rpx;
  background-color: #fff;
  font-size:48rpx;

}

.box_start .start_button{
  width: 270rpx;
  margin-top: 50rpx;
  color: #707070;
  background-color: #fdff73;
}
.sent{
  width: 500rpx;
  height:340rpx;
  display: flex;
  flex-wrap: wrap;
  margin:10rpx 0;
  border-bottom:1rpx dotted #aaaaaa;
  box-sizing: border-box;
  color: #707070;
}
.input{
  width: 500rpx;
  height:340rpx;
  display: flex;
  flex-wrap: wrap;
  margin:10rpx 0;

}