page {
  background-color: #dbf4f4;
}
/* 以下为引导页样式设置 */
.shadow_box{
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  background-color: rgba(22, 23, 24, 0.56);
}

.finger{
  margin-top: 210rpx;
}

.finger text{
  font: 48rpx 'Microsoft YaHei';
  color: #FFFFFF;
}
.finger image{
  width: 50rpx;
  height: 50rpx;
}
/* 知道了按钮样式设置 */
.dianji .know{
  margin-top: 100rpx;
  width: 270rpx;
  color: #fff;
  background-color: #4e4e4e;
}
.box{
  width: 500rpx;
  display: flex;
  flex-direction: column;
  margin: auto;
  margin-top: 100rpx;
}
.item{
  width: 500rpx;
  height:200rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 24rpx;
  margin:40rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin-top:100rpx; */
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, .2);
}
.txt{
  font-family: Segoe UI;
  font-size: 80rpx;
  color: #707070;
  font-weight: bold;
}