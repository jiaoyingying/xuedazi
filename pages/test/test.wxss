/* pages/test/test.wxss */

.img{

  position: absolute;
  width:100%;
  height:720rpx;
  z-index: -1;
}
.head{
  text-align: center;
  font-size:80rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
}
.type_content{
  width: 100%;
  /* height: 440px; */
  margin: 0rpx auto;
  border-radius: 16rpx;
  position: relative;
}
.final_correct{
  background-color: #E3E3E3;
  color: #555555;
  display: none;
}
.error{
  margin: 20rpx;
}
.text_box{
  width: 80%;
  height:180rpx;
  /* height: 50px; */
  margin: 60rpx auto 80rpx;
  border: 1rpx solid #ffa489; 
  color: #202020;
  background-color: white;
  border-radius: 12rpx;
  /* text-align: center; */
  line-height: 50rpx;
  font-size:35rpx;
  padding: 10rpx 10rpx;
  box-sizing: border-box; 
}
.navi{
  width:220rpx;
  height: 36rpx;
  position:fixed;
  left:20rpx;
  top:110rpx;
  
  display: flex;
 
}
.txt{
  height:40rpx;
  color: white;
  font-size:34rpx;
  letter-spacing:0.2em;

}
.icon{

  margin-right: 30rpx;
}
.icon image{
  height:36rpx;
  width:22rpx;
}
textarea{
  width: 600rpx;
  height:180rpx;
  resize:none;
  padding: 12rpx 20rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  border-radius: 12rpx;
  outline: none;
  border: none;
  border: 4rpx solid #eee;
  background-color: white;
  box-sizing: border-box;
  position: fixed;
  top:800rpx;
  left:75rpx;
} 
.incorrect_char { 
  color: red; 
  text-decoration: underline; 
} 

.correct_char { 
  color: #9B30FF; 
}
.restart{
    height: 90rpx;
    /*display: none;*/
    border: none;
    outline: none;
    cursor: pointer;
    color: #fff;
    background-color: #248efc;
    border-radius: 12rpx; 
    bottom: 20rpx;
    margin:20rpx auto;
    position: fixed;
    left:75rpx;
    bottom:150rpx;
}
.text_item{
  display:inline;
  flex-wrap: wrap;
}
.rightflag{
  color:green;
}
.wrongflag{
  color:red;
}
.type_box{
  list-style: none;
  width: 100%;
  /* border: 1px solid black; */
  display: flex;
  align-items: center;
  justify-content: center;
}
.innerbox{
  margin-top: 20rpx;
  position: relative;
  height:187rpx;
  width:187rpx;
  
}
.boximg{
  width:187rpx;
  height: 187rpx;
  position:absolute;
  
}
.innertxt{
  width:190rpx;
  height: 190rpx;
  color:white;
  position: absolute;
  display:flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;

}
.lianjie{
  z-index:-1;
}
.lianjie image{
  margin-top:20rpx;
  width:50rpx;
  height:50rpx;
}
